 
 {% block body %}
 <img src="back-office/images/logo.png" alt="logo" /> 

     
                    
        
<h1 style="font-size: 30px;
  color: #000;
  text-transform: uppercase;
  font-weight: 300;
  text-align: center;
  margin-bottom: 15px;">Bilan financiére</h4>     
      

<table style="background-color: #25b7c4; margin: 0 auto; table-layout: fixed; width:100%;">
             <thead>
            <tr style=" background-color: rgba(255,255,255,0.3);" >
                <th style=" padding: 20px 15px;
  text-align: left;
  font-weight: 500;
  font-size: 12px;
  color: #fff;
  text-transform: uppercase;">Id</th>
                 <th style=" padding: 20px 15px;
  text-align: left;
  font-weight: 500;
  font-size: 12px;
  color: #fff;
  text-transform: uppercase;">Totale évenements</th>
                 <th style=" padding: 20px 15px;
  text-align: left;
  font-weight: 500;
  font-size: 12px;
  color: #fff;
  text-transform: uppercase;">Totale Stock </th>
                 <th style=" padding: 20px 15px;
  text-align: left;
  font-weight: 500;
  font-size: 12px;
  color: #fff;
  text-transform: uppercase;">Totale Dons</th>
                <th style=" padding: 20px 15px;
  text-align: left;
  font-weight: 500;
  font-size: 12px;
  color: #fff;
  text-transform: uppercase;">Totale</th>
                <th style=" padding: 20px 15px;
  text-align: left;
  font-weight: 500;
  font-size: 12px;
  color: #fff;
  text-transform: uppercase;">Date</th>
           
            </tr>
        </thead>
      
        <tbody>
        {% for finance in finances %}
       
            <tr>
                <td style="padding: 15px;
  text-align: left;
  vertical-align:middle;
  font-weight: 300;
  font-size: 12px;
  color: #fff;
  border-bottom: solid 1px rgba(255,255,255,0.1);">{{ finance.id }}</td>
                <td style="padding: 15px;
  text-align: left;
  vertical-align:middle;
  font-weight: 300;
  font-size: 12px;
  color: #fff;
  border-bottom: solid 1px rgba(255,255,255,0.1);">{{ finance.evenement.billet }}</td>
                   <td style="padding: 15px;
  text-align: left;
  vertical-align:middle;
  font-weight: 300;
  font-size: 12px;
  color: #fff;
  border-bottom: solid 1px rgba(255,255,255,0.1);">{{ finance.commande.total }}</td>
                   <td style="padding: 15px;
  text-align: left;
  vertical-align:middle;
  font-weight: 300;
  font-size: 12px;
  color: #fff;
  border-bottom: solid 1px rgba(255,255,255,0.1);">{{ finance.dons.montant }}</td>
                <td style="padding: 15px;
  text-align: left;
  vertical-align:middle;
  font-weight: 300;
  font-size: 12px;
  color: #fff;
  border-bottom: solid 1px rgba(255,255,255,0.1);">{{ finance.somme }}</td>
                <td style="padding: 15px;
  text-align: left;
  vertical-align:middle;
  font-weight: 300;
  font-size: 12px;
  color: #fff;
  border-bottom: solid 1px rgba(255,255,255,0.1);">{{ finance.date ? finance.date|date('Y-m-d') : '' }}</td>
               
            </tr>
       
        {% else %}
            <tr>
            
            </tr>
        {% endfor %}
        </tbody>
    </table>
   
           
{% endblock %}
