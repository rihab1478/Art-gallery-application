{% extends 'back.html.twig' %}

{% block title %}Visite{% endblock %}

{% block body %}
    <h1>Visite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ visite.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ visite.date ? visite.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ visite.description }}</td>
            </tr>
            <tr>
                <th>Disponibilite</th>
                <td>{{ visite.disponibilite ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Num_carte</th>
                <td>{{ visite.numCarte }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ visite.montant }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ visite.sexe }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('visite_index_back') }}">back to list</a>

    <a href="{{ path('visite_edit_back', {'id': visite.id}) }}">edit</a>

    {{ include('visite-back/_delete_form.html.twig') }}
{% endblock %}
