{% extends 'back.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
<section id="user" class="user" style="color: white">
    <h1>Evenement</h1>

    <table class="table" style="color: white">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>NomEvenement</th>
                <td>{{ evenement.NomEvenement }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ evenement.Description }}</td>
            </tr>
            <tr>
                <th>NombreDeParticipants</th>
                <td>{{ evenement.NombreDeParticipants }}</td>
            </tr>
            <tr>
                <th>QrCode</th>
                <td><img src="{{ asset('Uploads/image/' ~evenement.QrCode) }}"></td>
            </tr>
            <tr>
                <th>Billet</th>
                <td>{{ evenement.Billet }}</td>
            </tr>
            <tr>
                <th>DateDeEvenement</th>
                <td>{{ evenement.DateDeEvenement ? evenement.DateDeEvenement|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Billet</th>
                <td>{{ evenement.longitude }}</td>
            </tr>
            <tr>
                <th>Billet</th>
                <td>{{ evenement.latitude }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('evenement_index') }}">Retourner vers la liste des évènements</a>

    <a href="{{ path('evenement_edit', {'id': evenement.id}) }}">Modifier</a>
    <li style="width:450px;height : 450px;"><iframe src='https://www.google.com/maps?q=
 {{evenement.longitude}} , {{evenement.latitude}} &hl=es;z=14&output=embed' style="width: 100%; height:100%;" ></iframe></li>

    {{ include('evenement/_delete_form.html.twig') }}
</section><!-- End Contact Section -->    
{% endblock %}
