<table  Border="1 " style=" width:100%; font: 400 16px 'Calibri', 'Arial'; overflow: hidden; max-width: 600px; margin: 0 auto; position: relative; " >
    <thead >
    <tr style="height: 60px; background: #60AFE0; font-size: 18px; ">
 
   
        
            <th>Id</th>
            <th>Date</th>
            <th>Description</th>
            <th>Disponibilite</th>
            <th>Num_carte</th>
            <th>Montant</th>
            <th>Sexe</th>

        </tr>
    </thead>
    <tbody>
        {% for visite in visites %}
        <tr style="height: 60px; background: #CEECF4; font-size: 18px; " >
        
            <td>{{ visite.id }}</td>
            <td>{{ visite.date ? visite.date|date('Y-m-d') : '' }}</td>
            <td>{{ visite.description }}</td>
            <td>{{ visite.disponibilite ? 'Yes' : 'No' }}</td>
            <td>{{ visite.numCarte }}</td>
            <td>{{ visite.montant }}</td>
            <td>{{ visite.sexe }}</td>
            <td>


        </tr>
        {% endfor %}
    </tbody>
</table>
